/* pages/shoplist/shoplist.wxss */
/* 当前商品信息 */
.shop{
  display: flex;      /*弹性布局*/
  position: relative;
  padding: 20rpx;
  border-bottom:1rpx solid #ddd;
}
/* 当前商品信息-图片 */
.shop-img{
  width:160rpx;
  height:160rpx;
  margin-right:20rpx;/*右侧外边距*/
}
/* 当前商品信息-店铺信息*/
.shop-info{
  width:580rpx;    /*元素宽度*/
  font-size:12px;
  color:#666;    /*文字样式*/
  display: flex;   /*子元素弹性布*/
  flex-direction: column;/*按列排*/
  line-height: 1.5;
}
/* 当前商品信息-店铺名称 */
.shop-title{
  font-size:16px;
  color:#333;
  width:380rpx;
}
/* 当前商品信息-打分 */
.shop-star{
  position: absolute;/*打分区域绝对定位*/
  right:20rpx;  /*右侧顶部距离*/
  top:20rpx;
}
.star-after{
   color:#e2e2e2;/*底层灰色星星 18:03*/
}
.star-before{
   position: absolute;
   top:0;
   left:0;
   width:75%;/*分值*/
   overflow: hidden;
   color:#f19e38;
}